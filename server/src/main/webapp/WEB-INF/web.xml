<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <listener>
    <listener-class>main.java.metier.InitContextListener</listener-class>
  </listener>
  
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.txt</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
    <url-pattern>*.js?*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.jpg</url-pattern>
    <url-pattern>*.ttf</url-pattern>
    <url-pattern>*.jpeg</url-pattern>
    <url-pattern>*.png</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>main.java.servlet.MainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GmapsServlet</servlet-name>
    <servlet-class>main.java.servlet.GmapsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GmapsServlet</servlet-name>
    <url-pattern>/gmaps</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MovieServlet</servlet-name>
    <servlet-class>main.java.servlet.MovieServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MovieServlet</servlet-name>
    <url-pattern>/movie</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CinemaServlet</servlet-name>
    <servlet-class>main.java.servlet.CinemaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CinemaServlet</servlet-name>
    <url-pattern>/cinema</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>main.java.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <filter>
	<filter-name>ResponseFilter</filter-name>  
	<filter-class>main.java.servlet.filters.ResponseFilter</filter-class>
  </filter>
  <filter-mapping>
	<filter-name>ResponseFilter</filter-name>
	<url-pattern>/*</url-pattern> 
	<dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  
</web-app>
