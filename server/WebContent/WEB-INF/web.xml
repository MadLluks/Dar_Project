<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <listener>
    <listener-class>com.dar.metier.InitContextListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>com.dar.servlets.MainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GmapsServlet</servlet-name>
    <servlet-class>com.dar.servlets.GmapsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GmapsServlet</servlet-name>
    <url-pattern>/gmaps</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MovieServlet</servlet-name>
    <servlet-class>com.dar.servlets.MovieServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MovieServlet</servlet-name>
    <url-pattern>/movie</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CinemaServlet</servlet-name>
    <servlet-class>com.dar.servlets.CinemaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CinemaServlet</servlet-name>
    <url-pattern>/cinema</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>com.dar.servlets.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>